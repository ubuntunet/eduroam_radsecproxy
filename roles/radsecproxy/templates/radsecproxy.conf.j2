# pre-configured European top-level servers
# this can be kept literally


{% for rlr in regional_proxies %}
  client {{ rlr.name }} {
    host {{ rlr.ip4 }}
    type {{ rlr.type }}
    secret {{ rlr.secret }}
  }
  server {{ rlr.name }} {
    host {{ rlr.ip4 }}
    type {{ rlr.type }}
    secret {{ rlr.secret }}
    statusserver on
  }

  {% if rlr.ip6.enabled == true %}
    client {{ rlr.name }} {
      host {{ rlr.ip6 }}
      type {{ rlr.type }}
      secret {{ rlr.secret }}
    }
    server {{ rlr.name }} {
      host {{ rlr.ip6 }}
      type {{ rlr.type }}
      secret {{ rlr.secret }}
      statusserver on
    }
  {% endif %}
{% endfor %}

