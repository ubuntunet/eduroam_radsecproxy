#

{% for institution in institutions %}

client {{ institution.name }} {
  host          {{ institution.host }}
  type          UDP
  secret        {{ institution.secret }}
  FTicksVISCOUNTRY {{ tld | upper }}
}

server {{ institution.name }} {
  host          {{ institution.host }}
  type          UDP
  secret        {{ institution.secret }}
  statusserver  on
}

